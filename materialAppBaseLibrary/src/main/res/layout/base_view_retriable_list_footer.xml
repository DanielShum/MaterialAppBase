<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:minHeight="72dp"
    android:gravity="center" >
    
    <LinearLayout android:id="@+id/loadMoreView"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:orientation="horizontal">
            <TextView android:id="@+id/category"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/base_text_color_dark"
        android:textSize="18sp"
        android:padding="8dp"
        android:text="@string/base_loading"
        android:textStyle="bold"/>
    
    <ProgressBar android:layout_height="32dp"
        android:layout_width="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"/>
    </LinearLayout>

    <com.daililol.material.appbase.widget.MaterialRaisedButton
        	style="@style/Button.Blue"
		    android:id="@+id/btnRetryLoadMore"/>
    
    <TextView android:id="@+id/noMoreItemText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/base_text_color_dark"
        android:textSize="18sp"
        android:text="@string/base_no_more_items"/>
		
    
    
</LinearLayout>
